<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/wallback4">
    <ImageView
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:src="@drawable/burger"
        android:id="@+id/shopimg"
        ></ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/black"
            android:text="This Is Tittle"
            android:layout_toRightOf="@+id/shopimg"
            android:layout_marginLeft="10dp"
            android:id="@+id/stittle"
            ></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="This Is Decription OF Service"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="18dp"
            android:layout_below="@+id/stittle"
            android:layout_marginLeft="130dp"
            android:id="@+id/shopdesc"
            ></TextView>

        <TextView
            android:id="@+id/servicecharge"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/shopdesc"
            android:layout_marginLeft="130dp"
            android:text="Service Charge"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="normal"
            ></TextView>
        <TextView
            android:id="@+id/shopname"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/servicecharge"
            android:layout_marginLeft="130dp"
            android:text="Service Name"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="normal"
            ></TextView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>