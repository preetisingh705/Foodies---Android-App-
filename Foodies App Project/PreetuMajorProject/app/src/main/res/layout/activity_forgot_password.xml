<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminLogin"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:padding="10dp">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_baseline_lock"
        ></ImageView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="25dp"
        android:padding="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="Forgot your password"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#800080"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Enter your username to receive your password "
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#800080"></TextView>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="UserName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginTop="10dp"
                app:boxCornerRadiusBottomEnd="20dp"
                app:boxCornerRadiusBottomStart="20dp"
                app:boxCornerRadiusTopEnd="20dp"
                app:boxCornerRadiusTopStart="20dp"
                app:startIconTint="#800080"
                app:startIconDrawable="@drawable/ic_baseline_person"
                app:endIconMode="clear_text">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></EditText>
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="Send"
                android:background="@drawable/buttongradient"
                app:cornerRadius="10dp"
                android:layout_marginTop="10dp"
                android:shadowDy="5"
                android:shadowDx="5"
                android:shadowRadius="9"
                android:shadowColor="@color/black"
                android:layout_gravity="center"
                android:id="@+id/btnAdminLogin"
                ></Button>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Back to Login Page "
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#800080"
                android:id="@+id/backtologin"></TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="10dp"
            android:padding="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:text="Reset Password"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#800080"></TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="Enter your new password below.. "
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#800080"></TextView>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="New Password"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginTop="10dp"
                    app:boxCornerRadiusBottomEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusTopStart="20dp"
                    app:startIconTint="#800080"
                    app:startIconDrawable="@drawable/ic_baseline_lock"
                    app:endIconMode="password_toggle">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"></EditText>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirm Password"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginTop="10dp"
                    app:boxCornerRadiusBottomEnd="20dp"
                    app:boxCornerRadiusBottomStart="20dp"
                    app:boxCornerRadiusTopEnd="20dp"
                    app:boxCornerRadiusTopStart="20dp"
                    app:startIconTint="#800080"
                    app:startIconDrawable="@drawable/ic_baseline_lock"
                    app:endIconMode="password_toggle">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"></EditText>
                </com.google.android.material.textfield.TextInputLayout>
                <Button
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:text="Reset Password"
                    android:background="@drawable/buttongradient"
                    app:cornerRadius="10dp"
                    android:layout_marginTop="10dp"
                    android:shadowDy="5"
                    android:shadowDx="5"
                    android:shadowRadius="9"
                    android:shadowColor="@color/black"
                    android:layout_gravity="center"
                    android:id="@+id/btnAdminLogin2"
                    ></Button>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

</LinearLayout>
